<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_videoblog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="32dp">

    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/video_title_tv"
        android:textColor="#662D91"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/likeButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/video_image_card"
        app:layout_constraintTop_toBottomOf="@+id/video_image_card" />

    <ImageView
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/like_button"
        app:layout_constraintEnd_toEndOf="@+id/video_image_card"
        app:layout_constraintTop_toTopOf="@+id/video_title"
        app:srcCompat="@drawable/ic_heart"
        app:tint="@color/purple_500" />

    <TextView
        android:id="@+id/video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="#292D32"
        android:fontFamily="@font/montserrat"
        android:elevation="10dp"
        android:text="17:05"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/video_image_card"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/video_image_card"
        android:layout_width="0dp"
        android:layout_height="204dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/main_team_2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/video_lector_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Лектор:"
        android:textColor="#AFAAD0"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/video_title"
        app:layout_constraintTop_toBottomOf="@+id/video_title" />

    <TextView
        android:id="@+id/video_lector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Лектор"
        android:textColor="#AFAAD0"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/video_lector_txt"
        app:layout_constraintTop_toBottomOf="@+id/video_title" />

    <TextView
        android:id="@+id/video_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="900"
        android:textColor="#AFAAD0"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/video_title"
        app:layout_constraintTop_toBottomOf="@+id/video_lector_txt" />

    <TextView
        android:id="@+id/video_views_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="просмотров"
        android:textColor="#AFAAD0"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/video_views"
        app:layout_constraintTop_toTopOf="@+id/video_views" />

    <TextView
        android:id="@+id/video_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="02.03.2023"
        android:textColor="#AFAAD0"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/video_views_tv"
        app:layout_constraintTop_toTopOf="@+id/video_views" />

    <View
        android:id="@+id/divider2"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/video_views_tv"
        app:layout_constraintEnd_toStartOf="@+id/video_date"
        app:layout_constraintStart_toEndOf="@+id/video_views_tv"
        app:layout_constraintTop_toTopOf="@+id/video_views_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>