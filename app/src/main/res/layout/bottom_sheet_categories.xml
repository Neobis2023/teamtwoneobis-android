<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/choose_category_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Выберите категорию"
        android:textColor="#403A64"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_all"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Все"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_category_txt" />

    <TextView
        android:id="@+id/category_1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Бизнес"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_all" />

    <TextView
        android:id="@+id/category_2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Будущее"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_1" />

    <TextView
        android:id="@+id/category_3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Еда"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_2" />

    <TextView
        android:id="@+id/category_4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Образование"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_3" />

    <TextView
        android:id="@+id/category_5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20sp"
        android:text="Программирование"
        android:textColor="#403A64"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_4" />

    <ImageView
        android:id="@+id/closeBottomSheetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/choose_category_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <View
        android:id="@+id/divider"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>